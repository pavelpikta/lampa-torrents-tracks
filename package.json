{
  "name": "lampa-torrents-tracks",
  "version": "1.0.0",
  "description": "HTTP API server for Lampa Tracks - TorrServer FFprobe integration",
  "main": "src/server-nodejs.js",
  "scripts": {
    "start": "node src/server-nodejs.js",
    "dev": "nodemon src/server-nodejs.js",
    "check": "npm run format && npm run lint",
    "check:fix": "npm run format:fix && npm run lint:fix",
    "ci": "npm ci && npm run check",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint src --ext .js,.mjs --max-warnings=0",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "lampa",
    "torrserver",
    "ffprobe",
    "tracks",
    "api",
    "docker"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.28.6",
    "@babel/plugin-syntax-import-assertions": "^7.28.6",
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.8.1"
  }
}
